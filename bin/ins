#!/bin/bash

arg=$1

if [ -n "$arg" ]; then
	path=$(which $arg)
    if [ -n "$path" ];then
		echo "Package already installed"
	elif [ "$path" = "" ];then
		echo -n "Do you want to update your apt repo? (y/n) "
		read conf
		if [ "$conf" = "Y" -o "$conf" = "y" -o "$conf" = "Yes" -o "$conf" = "yes" ];then
                        sudo apt update && sudo apt install -y $arg 
                elif [ "$conf" = "N" -o "$conf" = "n" -o "$conf" = "No" -o "$conf" = "no" ];then
                        sudo apt install -y $arg
                fi

	fi
else
    echo "Please provide the package name to install"
fi
